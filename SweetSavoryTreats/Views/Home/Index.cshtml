@{
  Layout = "_Layout";
}
@using SweetSavoryTreats.Models;

<h1>Welcome to the Sweet and Savory Tracker!</h1>
<h3>The destination to for Treats and Floavors galore!</h3>


<div class="row">
  <div class="col-sm-6">
    <h5>All Treats:</h5>

    @if (ViewBag.Treats.Count > 0)
    {
      <ul>
        @foreach (Treat treat in ViewBag.Treats)
        {
          <li>@Html.ActionLink($"{treat.Name}", "Details", "Treats", new { id = treat.TreatId })</li>
        }
      </ul>
    } 
    else
    {
      <h3>No Treat(s) Available</h3>
    }
  </div>
  <div class="col-sm-6">
    <h5>All Flavors:</h5>
    @if (ViewBag.Flavors.Count > 0)
    {
      <ul>
        @foreach (Flavor flavor in ViewBag.Flavors)
        {
          <li>@Html.ActionLink($"{flavor.Name}", "Details", "Flavors", new { id = flavor.FlavorId })</li>
        }
      </ul>
    } 
    else
    {
      <h3>No Flavor(s) Available</h3>
    }
  </div>

</div>

<p>@Html.ActionLink("See ONLY Treats", "Index", "Treats")</p> 
<p>@Html.ActionLink("See ONLY Flavors", "Index", "Flavors")</p>
<p>@Html.ActionLink("Create/Login", "Index", "Account")</p>